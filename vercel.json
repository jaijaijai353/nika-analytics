{
  "version": 2,
  "builds": [
    { "src": "api/chat.ts", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "framework": "vite",
  "env": {
    "OPENAI_API_KEY": "@openai_api_key"
  }
}
